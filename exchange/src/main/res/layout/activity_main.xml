<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/e_constraint">

    <FrameLayout
        android:id="@+id/e_fl_big"
        android:layout_width="@dimen/e_dp_0"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorAccent"
        android:alpha="0.5"
        android:clickable="true">

        <TextView
            android:id="@+id/e_tv_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/e_white"
            android:text="big"
            android:textSize="@dimen/e_sp_18"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/e_fl_small_1"
        android:layout_width="@dimen/e_dp_100"
        android:layout_height="@dimen/e_dp_150"
        android:background="@color/colorPrimary"
        android:alpha="0.5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:clickable="true"
        android:visibility="invisible">

        <TextView
            android:id="@+id/e_tv_small_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/e_white"
            android:text="small_1"
            android:textSize="@dimen/e_sp_18"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/e_fl_small_2"
        android:layout_width="@dimen/e_dp_100"
        android:layout_height="@dimen/e_dp_150"
        android:background="@android:color/black"
        android:alpha="0.5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/e_fl_small_1"
        android:clickable="true"
        android:visibility="invisible">

        <TextView
            android:id="@+id/e_tv_small_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/e_white"
            android:text="small2"
            android:textSize="@dimen/e_sp_18"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/e_fl_small_3"
        android:layout_width="@dimen/e_dp_100"
        android:layout_height="@dimen/e_dp_150"
        android:background="@android:color/darker_gray"
        android:alpha="0.5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/e_fl_small_2"
        android:clickable="true"
        android:visibility="invisible">

        <TextView
            android:id="@+id/e_tv_small_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/e_white"
            android:text="small3"
            android:textSize="@dimen/e_sp_18"/>
    </FrameLayout>

    <LinearLayout

        android:id="@+id/e_ll_control"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/black"
        android:alpha="0.5"
        android:orientation="horizontal">

        <Button
            android:id="@+id/e_bt_small_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="small_1"
            android:textAllCaps="false"/>
       <Button
            android:id="@+id/e_bt_small_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="small_2"
            android:textAllCaps="false"/>

       <Button
            android:id="@+id/e_bt_small_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="small_3"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/e_bt_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="reset"
            android:textAllCaps="false" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>